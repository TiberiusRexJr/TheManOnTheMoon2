@using ManOnTheMoon.Models;
@model TheManOnTheMoon2.Controllers.ViewModelMultipleModels

@{
    ViewBag.Title = "SingleProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 
<!----details-product-slider--->
<!-- Include the Etalage files -->
<link rel="stylesheet" href="~/Content/Layout_StoreFront/etalage.css">
<script src="~/Scripts/Layout-StoreFront/jquery.etalage.min.js"></script>
<!-- Include the Etalage files -->
<script>
						jQuery(document).ready(function($){

							$('#etalage').etalage({
								thumb_image_width: 300,
								thumb_image_height: 400,

								show_hint: true,
								click_callback: function(image_anchor, instance_id){
									alert('Callback example:\nYou clicked on an image with the anchor: "'+image_anchor+'"\n(in Etalage instance: "'+instance_id+'")');
								}
							});
							// This is for the dropdown list example:
							$('.dropdownlist').change(function(){
								etalage_show( $(this).find('option:selected').attr('class') );
							});

					});
</script>
<!----//details-product-slider--->

<h2>SingleProductDetail</h2>
<div class="main">
    <div class="shop_top">
        @if (Model.PrimaryProduct != null)
        {
        <div class="container">
            <div class="row">
                <div class="col-md-9 single_left">
                    <div class="single_image">
                        <ul id="etalage">
                            <li>
                                <a href="optionallink.html">
                                    <img class="etalage_thumb_image" src="@Model.PrimaryProduct.ProductImageUrl_1" />
                                    <img class="etalage_source_image" src="@Model.PrimaryProduct.ProductImageUrl_1" />
                                </a>
                            </li>
                            <li>
                                <img class="etalage_thumb_image" src="@Model.PrimaryProduct.ProductImageUrl_2" />
                                <img class="etalage_source_image" src="@Model.PrimaryProduct.ProductImageUrl_2" />
                            </li>
                            <li>
                                <img class="etalage_thumb_image" src="@Model.PrimaryProduct.ProductImageUrl_3" />
                                <img class="etalage_source_image" src="@Model.PrimaryProduct.ProductImageUrl_3" />
                            </li>
                        </ul>
                    </div>
                    <!-- end product_slider -->
                    <div class="single_right">
                        <h3>@Model.PrimaryProduct.Name</h3>
                        <p class="m_10">@Model.PrimaryProduct.Description</p>
                        <h4 class="m_12">Product Details</h4>
                        <div class="form-group row">
                            @Html.LabelFor(Model => Model.PrimaryProduct.Length, new { @class = "col-sm-2 col-form-label" });
                            @Html.DisplayFor(Model => Model.PrimaryProduct.Length, new { @class = "form-control-plaintext" });

                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(Model => Model.PrimaryProduct.Width, new { @class = "col-sm-2 col-form-label" });
                            @Html.DisplayFor(Model => Model.PrimaryProduct.Width, new { @class = "form-control-plaintext" });
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(Model => Model.PrimaryProduct.Height, new { @class = "col-sm-2 col-form-label" });
                            @Html.DisplayFor(Model => Model.PrimaryProduct.Height, new { @class = "form-control-plaintext" });
                        </div>
                        <ul class="options">


                            <li><a href="#">151</a></li>
                            <li><a href="#">148</a></li>
                            <li><a href="#">156</a></li>
                            <li><a href="#">145</a></li>
                            <li><a href="#">162(w)</a></li>
                            <li><a href="#">163</a></li>
                        </ul>
                        <ul class="product-colors">
                            <h3>available Colors</h3>
                            <li><a class="color1" href="#"><span> </span></a></li>
                            <li><a class="color2" href="#"><span> </span></a></li>
                            <li><a class="color3" href="#"><span> </span></a></li>
                            <li><a class="color4" href="#"><span> </span></a></li>
                            <li><a class="color5" href="#"><span> </span></a></li>
                            <li><a class="color6" href="#"><span> </span></a></li>
                            <div class="clear"> </div>
                        </ul>
                        <div class="btn_form">
                            <form>
                                <input type="submit" value="buy now" title="">
                            </form>
                        </div>
                        <ul class="add-to-links">
                            <li><img src="images/wish.png" alt=""><a href="#">Add to wishlist</a></li>
                        </ul>
                        <div class="social_buttons">
                            <h4>95 Items</h4>
                            <button type="button" class="btn1 btn1-default1 btn1-twitter" onclick="">
                                <i class="icon-twitter"></i> Tweet
                            </button>
                            <button type="button" class="btn1 btn1-default1 btn1-facebook" onclick="">
                                <i class="icon-facebook"></i> Share
                            </button>
                            <button type="button" class="btn1 btn1-default1 btn1-google" onclick="">
                                <i class="icon-google"></i> Google+
                            </button>
                            <button type="button" class="btn1 btn1-default1 btn1-pinterest" onclick="">
                                <i class="icon-pinterest"></i> Pinterest
                            </button>
                        </div>
                    </div>
                    <div class="clear"> </div>
                </div>
                <div class="col-md-3">
                    <div class="box-info-product">
                        <p class="price2">$@Model.PrimaryProduct.Retail_Price</p>
                        <ul class="prosuct-qty">
                            <span>Quantity:</span>
                            <select>
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                                <option>6</option>
                            </select>
                        </ul>
                        <button type="submit" name="Submit" class="exclusive">
                            <span>Add to cart</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="desc">
                <h4>Description</h4>
                <p>@Model.PrimaryProduct.Description</p>
            </div>
            <div class="row">
                <h4 class="m_11">Related Products in the same Category</h4>
                @if (Model.RelatedProducts != null)
                {
                    foreach (Product product in Model.RelatedProducts)
                    {
                        <div class="col-md-4 product1">
                            <img src="@product.ProductImageUrl_1" class="img-responsive" alt="" />
                            <div class="shop_desc">
                                <a href="single.html">
                                </a><h3><a href="single.html"></a><a href="#">aliquam volutp</a></h3>
                                <p>Lorem ipsum consectetuer adipiscing </p>
                                <span class="reducedfrom">@product.Retail_Price</span>
                                <span class="actual">$12.00</span><br>
                                <ul class="buttons">
                                    <li class="cart"><a href="#">Add To Cart</a></li>
                                    <li class="shop_btn"><a href="#">Read More</a></li>
                                    <div class="clear"> </div>
                                </ul>
                            </div>
                        </div>
                    }


                }
                @if (Model.RelatedProducts== null)
                { 
                    <p>No related products to show</p>
                }
                </div>
        </div>
        }
        @if(Model.PrimaryProduct==null)
        {
            <p>Nothing to show</p>
        }
        
    </div>
</div>


